<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_margin="20dp"
    android:padding="20dp"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uiEtFirstNo"
        android:layout_margin="10dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Enter a number"/>


    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uiEtSecNo"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/uiEtFirstNo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:hint="Enter a number"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uiClMain"
        app:layout_constraintTop_toBottomOf="@+id/uiEtSecNo">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uiBtnAdd"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/uiBtnSub"
            android:backgroundTint="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="4dp"
            android:text="+"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uiBtnSub"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/uiBtnAdd"
            app:layout_constraintEnd_toStartOf="@+id/uiBtnDiv"
            android:backgroundTint="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="4dp"
            android:text="-"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uiBtnDiv"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/uiBtnSub"
            app:layout_constraintEnd_toStartOf="@+id/uiBtnMul"
            android:backgroundTint="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="4dp"
            android:text="*"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/uiBtnMul"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/uiBtnDiv"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="4dp"
            android:text="/"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="24sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uiClMain"
        android:id="@+id/uiEtResult"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uiEtAns"
        android:hint="ans"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/uiEtResult"
        app:layout_constraintStart_toEndOf="@+id/uiEtResult"/>




